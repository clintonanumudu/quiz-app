<Page x:Class="QuizApp.End"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuizApp"
        mc:Ignorable="d"
        Background="#272537"
        Title="Quiz App" d:DesignWidth="850" d:DesignHeight="550">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <TextBlock Name="messageTb" Width="Auto" Grid.Row="1" Text="You were eliminated with 0 points!" HorizontalAlignment="Center" Foreground="White" FontSize="30"></TextBlock>
        <Button Grid.Row="2" Width="100" Height="40" VerticalAlignment="Top" Content="Try Again" FontSize="20" FontWeight="DemiBold" Background="#1c50c9" Foreground="White" Click="Try_Again"/>
    </Grid>
</Page>
