<Page x:Class="QuizApp.Name"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuizApp"
        mc:Ignorable="d"
        Background="#272537"
        Title="Quiz App" d:DesignWidth="850" d:DesignHeight="550">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <StackPanel Name="stackpanel" Grid.Row="1" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Name="message" Width="Auto" Text="Enter Name: " Foreground="White" FontSize="30"></TextBlock>
            <TextBox Name="nameField" Foreground="White" FontSize="30" Background="Transparent" BorderThickness="0" CaretBrush="White" Loaded="Textbox_Loaded" KeyDown="TextBox_KeyDown"/>
        </StackPanel>
    </Grid>
</Page>
